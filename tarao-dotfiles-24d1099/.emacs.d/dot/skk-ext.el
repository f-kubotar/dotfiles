(defun skk-reconstruct-rule-tree ()
  (kill-local-variable 'skk-rule-tree)
  (setq skk-rule-tree (skk-compile-rule-list
                       skk-rom-kana-base-rule-list
                       skk-rom-kana-rule-list)))
